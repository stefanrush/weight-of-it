<script>
  $(function() {
    window.app = new WOI.Routers.App({
      libraries: [
        <% cache @libraries do %>
          <% @libraries.each do |library| %>
            <% cache library do %>
              <%= library.app_json %>,
            <% end %>
          <% end %>
        <% end %>
      ],
      categories: [
        <% cache @categories do %>
          <% @categories.each do |category| %>
            <% cache category do %>
              <%= category.app_json %>,
            <% end %>
          <% end %>
        <% end %>
      ],
      perPage: <%= @per_page %>
    });
    Backbone.history.start({ pushState: true });
  });
</script>
